{
  "name": "DarkZap",
  "description": "Dark mode for WhatsApp Web",
  "version": "1.0",
  "options_page": "options.html",

  "permissions": [
    "tabs",
    "declarativeContent",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["*://web.whatsapp.com/*"],
      "js": ["dark.js"],
      "all_frames": true
    }
  ],

  "web_accessible_resources": ["darkzap.css"],

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "DarkZap"
  },

  "manifest_version": 2
}
